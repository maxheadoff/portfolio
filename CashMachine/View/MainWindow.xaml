<Window x:Class="CashMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Банк &#171;Светлый путь&#187;, Жуполовский филиал" Height="500" Width="608" MinWidth="600" MinHeight="500"
        Icon="../Resource/shop.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="10,10,10,10" Grid.Row="1" VerticalAlignment="Stretch" Width="100" Height="80" Click="btnCancel_Click" />
        <Button Name="bntEnter" Content="Ввод" HorizontalAlignment="Right" Margin="10,10,10,10" Grid.Row="1" VerticalAlignment="Stretch" Width="100" Height="80" Click="bntEnter_Click" />
        <Frame x:Name="frDisplay" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Frame>
    </Grid>
</Window>
